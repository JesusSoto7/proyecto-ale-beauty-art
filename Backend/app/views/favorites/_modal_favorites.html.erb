<% if favorite_products.present? && favorite_products.any? %>
  <% favorite_products.each do |product| %>
    <div class="fav-product mb-3">
      <% if product.imagen.attached? %>
        <%= image_tag product.imagen.variant(resize_to_limit: [200, 200]), class: "card-img-top", alt: "Producto Maquillaje", style: "width: 100%; max-height: 200px; object-fit: contain;" %>
      <% else %>
        <div class="card-img-top d-flex align-items-center justify-content-center" style="height: 200px; background-color: #f8f9fa;">
          <p>Sin imagen</p>
        </div>
      <% end %>

      <div class="product-info mt-2">
        <h5><%= product.nombre_producto %></h5>
        <p><%= number_to_currency(product.precio_producto, unit: "$") %></p>
      </div>
    </div> <!-- ✅ cierre único de fav-product -->
  <% end %>
<% else %>
  <div class="text-center p-4">
    <p>No tienes productos favoritos guardados.</p>
  </div>
<% end %>
