<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mis Productos Favoritos</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        /* Estilos base */
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
            color: #333;
            background-color: #f5f5f5;
            padding: 0;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* Menú plegable */
        .menu-container {
            background-color: #333;
            padding: 10px;
        }

        .menu-btn {
            background: none;
            border: none;
            color: white;
            font-size: 16px;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .menu-content {
            display: none;
            background-color: #444;
            padding: 10px 0;
        }

        .menu-content a {
            color: white;
            padding: 8px 16px;
            text-decoration: none;
            display: block;
        }

        .menu-content a:hover {
            background-color: #555;
        }

        .show-menu {
            display: block;
        }

        /* Contenedor principal */
        #favorite-products-container {
            width: 100%;
            flex: 1;
            padding: 20px;
            display: flex;
            flex-direction: column;
        }

        /* Encabezado elegante */
        .favorites-header {
            margin-bottom: 30px;
            text-align: center;
            padding: 20px 0;
            background: linear-gradient(135deg, #f486a5 0%, #f5a7c1 100%);
            border-radius: 8px;
            color: white;
            box-shadow: 0 4px 12px rgba(244, 134, 165, 0.2);
        }

        .favorites-title {
            font-size: 28px;
            font-weight: 600;
            margin-bottom: 10px;
            letter-spacing: 0.5px;
        }

        .favorites-count {
            background: rgba(255, 255, 255, 0.2);
            color: white;
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 14px;
            display: inline-block;
            backdrop-filter: blur(5px);
        }

        /* Grid de productos */
        .favorite-products {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 25px;
            flex: 1;
            align-content: start;
        }

        /* Tarjeta de producto */
        .fav-product {
            background: white;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
            display: flex;
            flex-direction: column;
            height: 100%;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .fav-product:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.12);
        }

        /* Contenedor de imagen */
        .product-image-container {
            height: 200px;
            background: #f9f9f9;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            flex-shrink: 0;
        }

        .product-image {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
            transition: transform 0.3s ease;
        }

        .fav-product:hover .product-image {
            transform: scale(1.05);
        }

        .no-image-placeholder {
            display: flex;
            flex-direction: column;
            align-items: center;
            color: #aaa;
        }

        /* Detalles del producto */
        .product-main-details {
            padding: 18px;
            flex: 1;
        }

        .product-title {
            font-size: 16px;
            margin-bottom: 10px;
            font-weight: 600;
            color: #444;
        }

        .product-price {
            font-size: 20px;
            font-weight: 700;
            color: #f486a5;
            margin-bottom: 15px;
        }

        /* Acciones del producto */
        .product-actions {
            display: flex;
            gap: 10px;
            padding: 0 18px 18px;
            margin-top: auto;
        }

        .add-to-cart-btn {
            flex-grow: 1;
            padding: 12px;
            background: #f486a5;
            color: white;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-weight: 600;
            transition: background 0.3s ease;
        }

        .add-to-cart-btn:hover {
            background: #e67292;
        }

        .remove-favorite-btn {
            width: 44px;
            height: 44px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: #f0f0f0;
            color: #666;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .remove-favorite-btn:hover {
            background: #e67292;
            color: white;
        }

        /* Estado vacío */
        .empty-favorites {
            text-align: center;
            padding: 60px 20px;
            background: white;
            border-radius: 10px;
            grid-column: 1 / -1;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            flex: 1;
            width: 100%;
            box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        }

        .empty-icon {
            font-size: 50px;
            color: #f486a5;
            margin-bottom: 20px;
            opacity: 0.2;
        }

        .empty-favorites h3 {
            font-size: 22px;
            margin-bottom: 15px;
            color: #555;
        }

        .empty-favorites p {
            color: #777;
            margin-bottom: 25px;
            max-width: 400px;
        }

        .btn-explore {
            background: #f486a5;
            color: white;
            padding: 12px 30px;
            border-radius: 6px;
            text-decoration: none;
            display: inline-block;
            font-weight: 600;
            transition: background 0.3s ease, transform 0.2s ease;
        }

        .btn-explore:hover {
            background: #e67292;
            transform: translateY(-2px);
        }

        /* Responsive */
        @media (max-width: 768px) {
            .favorite-products {
                grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
                gap: 20px;
            }
            
            .favorites-header {
                padding: 15px 0;
            }
            
            .favorites-title {
                font-size: 24px;
            }
        }

        @media (max-width: 480px) {
            .favorite-products {
                grid-template-columns: 1fr;
            }
            
            .favorites-header {
                margin-bottom: 20px;
            }
        }
    </style>
</head>
<body>
    <div id="favorite-products-container">
        <div class="favorites-header">
            <h2 class="favorites-title">
                Mis Favoritos
            </h2>
            <% if favorite_products.present? && favorite_products.any? %>
                <div class="favorites-count"><%= favorite_products.count %> producto<%= 's' if favorite_products.count > 1 %></div>
            <% end %>
        </div>
        
        <div class="favorite-products">
            <% if favorite_products.present? && favorite_products.any? %>
                <% favorite_products.each do |product| %>
                    <div class="fav-product" data-product-id="<%= product.id %>">
                        <%= link_to show_product_client_path(product), class: "product-clickable-area" do %>
                            <div class="product-image-container">
                                <% if product.imagen.attached? %>
                                    <%= image_tag product.imagen.variant(resize_to_limit: [300, 300]), class: "product-image", alt: product.nombre_producto %>
                                <% else %>
                                    <div class="no-image-placeholder">
                                        <i class="fas fa-image"></i>
                                        <span>Imagen no disponible</span>
                                    </div>
                                <% end %>
                            </div>
                            
                            <div class="product-main-details">
                                <h3 class="product-title"><%= product.nombre_producto %></h3>
                                <div class="product-price"><%= number_to_currency(product.precio_producto, unit: "$") %></div>
                            </div>
                        <% end %>
                        
                        <div class="product-actions">
                            <%= button_to add_to_cart_path(@cart),
                                method: :post,
                                params: { product_id: product.id, cantidad: 1 },
                                class: "add-to-cart-btn" do %>
                                <i class="fas fa-shopping-cart"></i> Añadir
                            <% end %>
                            
                            <button class="remove-favorite-btn" 
                                    data-product-id="<%= product.id %>"
                                    onclick="removeFavorite(this)">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </div>
                    </div>
                <% end %>
            <% else %>
                <div class="empty-favorites">
                    <div class="empty-icon">
                        <i class="far fa-heart"></i>
                    </div>
                    <h3>Tu lista de favoritos está vacía</h3>
                    <p>Guarda tus productos favoritos haciendo clic en el corazón</p>
                    <%= link_to "Explorar productos", productos_path, class: "btn-explore" %>
                </div>
            <% end %>
        </div>
    </div>

    <script>
        // Función para el menú plegable
        function toggleMenu() {
            const menu = document.getElementById('menuContent');
            menu.classList.toggle('show-menu');
        }

        // Cerrar menú al hacer clic fuera de él
        document.addEventListener('click', function(event) {
            const menu = document.getElementById('menuContent');
            const btn = document.querySelector('.menu-btn');
            
            if (!menu.contains(event.target) && !btn.contains(event.target)) {
                menu.classList.remove('show-menu');
            }
        });

        // Función para eliminar favoritos
        function removeFavorite(button) {
            const productId = button.dataset.productId;
            if (!confirm('¿Quitar de favoritos?')) return;

            fetch(`/favorites?product_id=${productId}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json',
                    'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    const productCard = button.closest('.fav-product');
                    productCard.style.transform = 'scale(0.9)';
                    productCard.style.opacity = '0';
                    
                    setTimeout(() => {
                        productCard.remove();
                        
                        const countElement = document.querySelector('.favorites-count');
                        if (countElement) {
                            const currentCount = parseInt(countElement.textContent);
                            const newCount = currentCount - 1;
                            
                            if (newCount > 0) {
                                countElement.textContent = `${newCount} producto${newCount !== 1 ? 's' : ''}`;
                            } else {
                                // Si no quedan productos, recargar la página para mostrar el estado vacío
                                location.reload();
                            }
                        }
                    }, 300);
                }
            })
            .catch(error => console.error('Error:', error));
        }
    </script>
</body>
</html>