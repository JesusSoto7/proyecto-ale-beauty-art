  <script>
    // MenÃº desplegable
    function toggleMenu() {
      const nav = document.getElementById('main-nav');
      nav.classList.toggle('show');
      
      const dropdown = document.getElementById('dropdown-menu');
      if (dropdown.style.display === 'flex') {
        dropdown.style.display = 'none';
