<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Categorías</title>
  <style>
    :root {
      --primary-color: #ff6b98;
      --secondary-color: #ff8fab;
      --dark-color: #333;
      --light-color: #f8f9fa;
      --shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      --card-shadow: 0 2px 10px rgba(0, 0, 0, 0.08);
    }

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: #fff9fb;
      color: var(--dark-color);
      margin: 0;
      padding: 0;
    }

    .products-section {
      max-width: 1200px;
      margin: 0 auto;
      padding: 2rem 1.5rem;
    }

    .titulo {
      color: var(--primary-color);
      font-size: 2rem;
      margin-bottom: 2rem;
      text-align: center;
      position: relative;
      padding-bottom: 0.5rem;
    }

    .titulo::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 50%;
      transform: translateX(-50%);
      width: 80px;
      height: 3px;
      background-color: var(--secondary-color);
    }

    .products-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 1.5rem;
      padding: 0;
    }

    .product-card {
      background: white;
      border-radius: 12px;
      overflow: hidden;
      box-shadow: var(--card-shadow);
      transition: all 0.3s ease;
      display: flex;
      flex-direction: column;
      height: 100%;
      border: none;
    }

    .product-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.12);
    }

    .card-img-container {
      width: 100%;
      height: 200px;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 1rem;
      background: white;
      border-bottom: 1px solid #f0f0f0;
    }

    .card-img {
      max-width: 100%;
      max-height: 100%;
      object-fit: contain;
    }

    .card-body {
      padding: 1.25rem;
      display: flex;
      flex-direction: column;
      flex-grow: 1;
    }

    .product-name {
      font-size: 1.1rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
      color: var(--dark-color);
      text-align: center;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .product-price {
      font-size: 1.25rem;
      font-weight: bold;
      color: var(--primary-color);
      text-align: center;
      margin-bottom: 1rem;
    }

    .add-to-cart {
      background: linear-gradient(135deg, #d95d85, #e58bb1);
      color: white;
      font-weight: bold;
      padding: 0.75rem;
      border: none;
      border-radius: 8px;
      width: 100%;
      font-size: 0.95rem;
      box-shadow: 0 3px 8px rgba(0,0,0,0.1);
      transition: all 0.3s ease;
      cursor: pointer;
      text-align: center;
      display: block;
    }

    .add-to-cart:hover {
      background: linear-gradient(135deg, #c04a72, #d4779d);
      transform: translateY(-2px);
      box-shadow: 0 5px 12px rgba(0,0,0,0.15);
    }

    .no-products {
      text-align: center;
      color: #666;
      font-size: 1.1rem;
      margin-top: 2rem;
    }

    /* Responsive Styles */
    @media (max-width: 992px) {
      .products-grid {
        grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
      }
      
      .card-img-container {
        height: 180px;
      }
    }

    @media (max-width: 768px) {
      .products-section {
        padding: 1.5rem 1rem;
      }
      
      .titulo {
        font-size: 1.7rem;
      }
      
      .products-grid {
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 1.2rem;
      }
      
      .card-img-container {
        height: 160px;
        padding: 0.8rem;
      }
      
      .product-name {
        font-size: 1rem;
      }
      
      .product-price {
        font-size: 1.1rem;
      }
    }

    @media (max-width: 576px) {
      .products-grid {
        grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
        gap: 1rem;
      }
      
      .card-img-container {
        height: 140px;
      }
      
      .add-to-cart {
        padding: 0.6rem;
        font-size: 0.85rem;
      }
    }

    @media (max-width: 400px) {
      .products-grid {
        grid-template-columns: 1fr;
      }
      
      .titulo {
        font-size: 1.5rem;
      }
      
      .card-img-container {
        height: 180px;
      }
    }
  </style>
</head>
<body>
<div class="products-section">
  <h1 class="titulo">Productos en <%= @category.nombre_categoria %></h1>

  <% if @products.any? %>
    <div class="products-grid">
      <% @products.each do |product| %>
        <%= link_to show_product_client_path(product) do%>
          <div class="product-card">
            <div class="card-img-container">
              <% if product.imagen.attached? %>
                <%= image_tag product.imagen, class: "card-img", alt: product.nombre_producto %>
              <% else %>
                <div style="color: #999; font-size: 0.9rem;">Imagen no disponible</div>
              <% end %>
            </div>
            <div class="card-body">
              <h3 class="product-name"><%= product.nombre_producto %></h3>
              <p class="product-price"><%= number_to_currency(product.precio_producto, unit: "$", delimiter: ".", separator: ",") %></p>

              <div style="display: flex; justify-content: center; align-items: center; gap: 10px;">
                <%= button_to "Añadir al carrito", add_to_cart_path(@cart),
                    method: :post,
                    params: { product_id: product.id, cantidad: 1 }, 
                    class: "add-to-cart" %>
                
                <div class="favorite fav-icon">
                    <% if current_user && current_user.favorite_products.include?(product) %>
                      <i class="fa-solid fa-heart fa-2xl favorite-icon"
                        style="color: #cb9fb9;"
                        data-product-id="<%= product.id %>"
                        data-favorited="true"></i>
                    <% else %>
                      <i class="fa-regular fa-heart fa-xl favorite-icon"
                        style="color: #d7a7c3;"
                        data-product-id="<%= product.id %>"
                        data-favorited="false"></i>
                    <% end %>
                  </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <p class="no-products">No hay productos en esta categoría.</p>
  <% end %>
</div>
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const favoriteIcons = document.querySelectorAll(".favorite-icon");

    favoriteIcons.forEach(icon => {
      icon.addEventListener("click", (event) => {
        event.stopPropagation(); // evita que el clic llegue al contenedor
        // aquí puedes también hacer la lógica de agregar/quitar favorito
      });
    });
  });
</script>
</body>
</html>