<h1>Productos en <%= @category.name %></h1>

<% if @products.any? %>
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <%= image_tag product.image.url, class: "card-img-top", alt: product.name if product.image.attached? %>
          <div class="card-body">
            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text"><%= number_to_currency(product.price) %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p>No hay productos en esta categor√≠a.</p>
<% end %>
