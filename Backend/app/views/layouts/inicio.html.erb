<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
<head>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "bootstrap", media: "all" %>
  <%= stylesheet_link_tag "inicio", media: "all" %>
  <%= stylesheet_link_tag "productos", media: "all" %>
  <%= stylesheet_link_tag "carts", media: "all" %>
  <%= stylesheet_link_tag "perfil", media: "all" %>
  <%= stylesheet_link_tag "edit_perfil", media: "all" %>
  <%= stylesheet_link_tag "about", media: "all" %>
  <%= stylesheet_link_tag "showClient.css" %>
  <%= javascript_include_tag "favorites", defer: true %>
  <%= javascript_include_tag 'loader', defer: true %>

  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title><%= t("app.title") %></title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>

  <div id="loader" class="loader-visible">
    <div class="spinner"></div>
  </div>

  <div class="page-container">
    <header class="navbar">
      <div class="menu-icon" onclick="toggleMenu()"><i class="fas fa-bars"></i></div>

      <div class="logo">
        <%= link_to inicio_path(locale: I18n.locale) do %>
          <%= image_tag "ale_logo.jpg", alt: t("app.logo_alt") %>
        <% end %>
      </div>

      <nav id="main-nav">
        <%= link_to t("menu.home"), inicio_path(locale: I18n.locale) %>
        <%= link_to t("menu.products"), productos_path(locale: I18n.locale) %>
        <%= link_to t("menu.categories"), user_categories_path(locale: I18n.locale) %>
      </nav>
      
      <div class="search-container" id="search-box">
        <%= form_with url: productos_path(locale: I18n.locale), method: :get, local: true, class: "search-form" do %>
          <%= text_field_tag :name, params[:name], placeholder: t("search.placeholder"), class: "search-input" %>
          <button type="submit" class="search-button">
            <i class="fas fa-search"></i>
          </button>
        <% end %>
      </div>

      <div class="top-right-icons">
        <div class="user-options">
          <span id="profile-icon">
            <% if user_signed_in? %>
              <p id="inicial">
                <%= current_user.nombre[0].upcase %><%= current_user.apellido[0].upcase %>
              </p>
            <% else %>
              <i class="fas fa-user-circle"></i>
            <% end %>
          </span>
          <div id="menu-perfil">
            <ul id="ul-perfil">
              <%= link_to t("profile.my_profile"), user_profile_path(locale: I18n.locale), class: "texto-perfil" %>
              <% if user_signed_in? %>
                <li><%= link_to t("profile.my_addresses"), direcciones_path(locale: I18n.locale), class: "texto-perfil" %></li>
                <li><%= button_to t("auth.logout"), destroy_user_session_path(locale: I18n.locale), method: :delete, class:"cerrar_sesion" %></li>
              <% else %>
                <li><%= button_to t("auth.login"), new_user_session_path(locale: I18n.locale), class:"iniciar_sesion" %></li>
              <% end %>
            </ul>
          </div>
        </div>

        <div class="favorite fav-icon">
          <a href="javascript:void(0)" id="open-favorites-modal">
            <i class="fa-regular fa-heart fa-xl" style="color: #d7a7c3;"></i>
          </a>
        </div>
      
        <% if current_user %>
          <div id="favorites-modal" class="custom-modal">
            <div class="custom-modal-content">
              <span class="close-modal" id="close-favorites-modal">&times;</span>
              <h2><%= t("favorites.title") %></h2>
              <div id="favorites-loader-overlay" class="favorites-loader-overlay" style="display: none;">
                <div class="spinner"></div>
              </div>
              <%= render partial: 'favorites/modal_favorites', locals: { favorite_products: current_user.favorite_products } %>
            </div>
          </div>
        <% end %>

        <div class="cart cart-icon">
          <%= link_to current_cart_path(locale: I18n.locale) do %>
            <i class="fas fa-shopping-bag"></i>
            <span class="cart-count" id="count-cart"><%= current_cart.cart_products.sum(:cantidad) %></span>
          <% end %>
        </div>
      </div>
    </header>

    <div id="dropdown-menu" class="dropdown-menu">
      <a href="#"><i class="fas fa-shopping-bag"></i> <%= t("menu.my_purchases") %></a>
      <a href="#"><i class="fas fa-heart"></i> <%= t("menu.favorites") %></a>
      <a href="#"><i class="fas fa-cog"></i> <%= t("menu.settings") %></a>
    </div>

    <main class="content-wrap">
      <%= yield %>
    </main>

    <footer>
      <div class="footer-content">
        <div class="footer-section">
          <h3><%= t("footer.info") %></h3>
          <ul>
            <li><%= link_to t("footer.about_us"), about_path(locale: I18n.locale) %></li>
            <li><a href="#"><%= t("footer.terms") %></a></li>
            <li><a href="#"><%= t("footer.privacy") %></a></li>
          </ul>
        </div>
        <div class="footer-section">
          <h3><%= t("footer.contact") %></h3>
          <ul>
            <li><i class="fas fa-phone"></i> +57 123 456 7890</li>
            <li><i class="fas fa-envelope"></i> alebeautyart@gmail.com</li>
            <li><i class="fas fa-map-marker-alt"></i> Barranquilla, Colombia</li>
          </ul>
        </div>
        <div class="footer-section">
          <h3><%= t("footer.follow_us") %></h3>
          <div class="social-icons">
            <a href="#"><i class="fab fa-facebook-f"></i></a>
            <a href="https://www.instagram.com/ale.beautyart/"><i class="fab fa-instagram"></i></a>
            <a href="#"><i class="fab fa-twitter"></i></a>
            <a href="#"><i class="fab fa-pinterest-p"></i></a>
          </div>
        </div>
      </div>
      <div class="footer-bottom">
        Â© 2025 <%= t("footer.copyright") %>
      </div>
    </footer>
  </div>

  <script>
    function toggleMenu() {
      const nav = document.getElementById('main-nav');
      nav.classList.toggle('show');
      
      const dropdown = document.getElementById('dropdown-menu');
      if (dropdown.style.display === 'flex') {
        dropdown.style.display = 'none';
      }
    }
    
    const profileIcon = document.getElementById('profile-icon');
    const menuPerfil = document.getElementById('menu-perfil');
    
    profileIcon.addEventListener('click', (e) => {
      e.stopPropagation();
      menuPerfil.style.display = menuPerfil.style.display === 'block' ? 'none' : 'block';
    });
    
    document.addEventListener('click', () => {
      menuPerfil.style.display = 'none';
    });
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
