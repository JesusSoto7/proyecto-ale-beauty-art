<turbo-stream target="count-cart" action="update">
  <template>
    <%= @cart.cart_products.sum(:cantidad)%>
  </template>
</turbo-stream>

<%= turbo_stream.replace "itemsCar" do %>
  <%= render partial: "cart/items", locals: { cart: @cart } %>
<% end %>

<%= turbo_stream.replace "resCar" do %>
  <%= render partial: "cart/resumen", locals: { cart: @cart } %>
<% end %>
