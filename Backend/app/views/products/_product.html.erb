<div class="card" style="width: 15rem;">
  <% if product.imagen.attached? %>
      <%= image_tag product.imagen, class: "card-img" %>
    <% else %>
    <p>Sin imagen</p>
  <% end %>
  <div class="card-body">
    <h5 class="card-title"><%= product.nombre_producto %></h5>
    <p class="card-text"><%= product.category.nombre_categoria %>
    </p>
    <div class="d-flex justify-content-between align-items-center">
      <strong id="preci">$<%= product.precio_producto %></strong>
      <%= link_to "Ver", product, class: "btn btn-primary" %>
    </div>

    
    
  </div>
</div>