<div class="product">
  <h3><%= product.nombre_producto %></h3>
  <% if product.imagen.attached? %>
      <%= image_tag product.imagen.variant(resize_to_limit: [300, 300])%>
    <% else %>
    <p>Sin imagen</p>
  <% end %>
  
  <h4><strong>Precio: </strong><%= product.precio_producto %></h4>
  <p><strong>Categoria:</strong> <%= product.category.nombre_categoria %> </p>

</div>