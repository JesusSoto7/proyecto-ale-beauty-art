<section class="form-section">
    <%= form_with(model: @product, local: true, html: { multipart: true, class: "needs-validation", novalidate: true }) do |form| %>
    
    <% if @product.errors.any? %>
        <div class="alert alert-danger">
        <h4><%= pluralize(@product.errors.count, "error") %> el producto no pudo ser creado:</h4>
        <ul>
            <% @product.errors.each do |error| %>
            <li><%= error.full_message %></li>
            <% end %>
        </ul>
        </div>
    <% end %>

    <div class="mb-3">
        <%= form.label :nombre_producto, class: "form-label" %>
        <%= form.text_field :nombre_producto, class: "form-control" %>
    </div>

    <div class="mb-3">
        <%= form.label :category_id, "Categoría", class: "form-label" %>
        <%= form.collection_select :category_id, Category.all, :id, :nombre_categoria, { prompt: "Seleccione Categoría" }, class: "form-select" %>
    </div>

    <div class="mb-3">
        <%= form.label :precio_producto, class: "form-label" %>
        <%= form.number_field :precio_producto, min: 0, step: 0.01, class: "form-control" %>
    </div>

    <div class="mb-3">
        <%= form.label :descripcion, class: "form-label" %>
        <%= form.text_area :descripcion, rows: 5, class: "form-control" %>
    </div>

    <div class="mb-3">
        <%= form.label :stock, class: "form-label" %>
        <%= form.number_field :stock, min: 0, class: "form-control" %>
    </div>

    <div class="mb-3">
        <%= form.label :imagen, class: "form-label" %>
        <%= form.file_field :imagen, class: "form-control" %>
    </div>

    <div class="mt-4">
        <%= form.submit "Guardar Producto", class: "btn btn-primary" %>
    </div>

    <% end %>
</section>